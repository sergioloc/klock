<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Pink dialog theme -->
    <style name="PinkDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/colorAccent2</item>
        <item name="android:colorControlActivated">@color/colorAccent2</item>
    </style>

    <!-- Pick number theme -->
    <style name="NumberPicker" parent="Theme.AppCompat.Light">
        <item name="android:colorAccent">@color/colorGray</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>