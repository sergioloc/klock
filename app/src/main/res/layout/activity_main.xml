<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/ivTime1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:background="@drawable/card_rectangle"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/tvTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivTime1"
        app:layout_constraintBottom_toBottomOf="@id/ivTime1"
        app:layout_constraintStart_toStartOf="@id/ivTime1"
        app:layout_constraintEnd_toEndOf="@id/ivTime1"
        app:drawableTopCompat="@drawable/ic_clock"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:text="@string/select_time" />

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivTime1"
        app:layout_constraintBottom_toTopOf="@id/ivTime2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="50sp"
        android:textColor="@color/colorAccent"
        android:text="@string/default_time" />

    <ImageButton
        android:id="@+id/ivTime2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:background="@drawable/card_rectangle"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/tvTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivTime2"
        app:layout_constraintBottom_toBottomOf="@id/ivTime2"
        app:layout_constraintStart_toStartOf="@id/ivTime2"
        app:layout_constraintEnd_toEndOf="@id/ivTime2"
        app:drawableTopCompat="@drawable/ic_clock"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:text="@string/select_time" />

</androidx.constraintlayout.widget.ConstraintLayout>